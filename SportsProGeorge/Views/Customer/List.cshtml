@using SportsProGeorge.Models;
@model List<Customer>
@{
	ViewData["Title"] = "List Customers";
	Layout = "_Layout";
}
<h2>Customer Manager</h2>
<table class="table table-bordered">
	<thead>
		<tr>
			<th>
				Name
			</th>
			<th>
				Email
			</th>
			<th>
				City
			</th>
			<th>
			</th>
			<th>
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var customer in Model)
		{
			<tr>
				<td>
					@customer.Name
				</td>
				<td>
					@customer.Email
				</td>
				<td>
					@customer.City
				</td>
				<td>
					<a asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.CustomerID" class="btn btn-primary">Edit</a>
				</td>
				<td>
					<a asp-controller="Customer" asp-action="Delete" asp-route-id="@customer.CustomerID" class="btn btn-danger">Delete</a>
				</td>

			</tr>
		}
	</tbody>
</table>
<a asp-controller="Customer" asp-action="Add" class="btn btn-primary">Add Customer</a>