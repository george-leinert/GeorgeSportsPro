@using SportsProGeorge.Models;
@model List<Product>
@{
	ViewData["Title"] = "List Products";
	Layout = "_Layout";
}
<h2>Product Manager</h2>


<table class="table table-bordered">
	<thead>
		<tr>
			<th>
				Code
			</th>
			<th>
				Name
			</th>
			<th>
				Price
			</th>
			<th>
				Release Date
			</th>
			<th>
			</th>
			<th>
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var product in Model)
		{
			<tr>
				<td>
					@product.Code
				</td>
				<td>
					@product.Name
				</td>
				<td>
					@product.Price
				</td>
				<td>
					@product.ReleaseDate
				</td>
				<td>
					<a asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductID" class="btn btn-primary">Edit</a>
				</td>
				<td>
					<a asp-controller="Product" asp-action="Delete" asp-route-id="@product.ProductID" class="btn btn-danger">Delete</a>
				</td>

			</tr>
		}
	</tbody>
</table>
<a asp-controller="Product" asp-action="Add" class="btn btn-primary">Add Product</a>